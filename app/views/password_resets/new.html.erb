<div class="formScreen ">
    <main class="form-container">
        <img src="<%= asset_path('logo.svg') %>" style="padding-bottom: 15px" height="128">
        <h3>Esqueceu a Senha?</h3>
        <%= form_with url: password_reset_path, class:"form" do |form|%>
            <div class="mb-3">
                <%= form.label "E-mail" %>
                <%= form.text_field :email, placeholder: "Escreva aqui o seu email", class: "form-control" %>
            </div>
            <div>
                <%= form.submit "Redefinir senha", class:"btn btn-primary" %>
            </div>
        <% end %>
    </main>
</div>