<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="display: block" >
    <div class="toast-header">
    <img src="<%= asset_path(toast_type + '.svg') %>" class="rounded me-2" alt="...">
    <strong class="me-auto"><%= type_message %>!</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        <%= message %>
    </div>
</div>

<script>
    function myFunction() {
        var button = event.target;
        var toast = button.parentNode.parentNode;
        toast.style.display = 'none';
    }
    
    var buttons = document.querySelectorAll('.btn-close');
    buttons.forEach(function(button) {
        button.addEventListener('click', myFunction);
    });
</script>